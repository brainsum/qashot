#!/usr/bin/env bash

set -e

if [[ -n "${DEBUG}" ]]; then
    set -x
fi

from=$1
to=$2

if [[ "${to}" == "${FILES_DIR}" || "${to}" =~ ^"${FILES_DIR}/" ]]; then
    rsync -rltpog --chown="${WEB_USER_NAME}:${WEB_USER_NAME}" "${from}" "${to}"
    # Ensure files volume permissions are still correct.
    init_container
else
    echo "Invalid destination. Must be under ${FILES_DIR}"
    exit 1
fi
